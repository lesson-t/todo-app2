= link_to board_task_path(@board.id, task.id) do
  .card
    - if task.eyecatch.attached?
      .card_img
        = image_tag task.eyecatch
    .card_content
      .card_title
        = task.title
      .card_detail
        = image_tag @board.user.avatar_image
        %div
          %p= @board.author_name